{% extends 'admin/dashboard.html.twig' %}

{% block dashboard_content %}

<div class="row">
    <div class="form-wrapper col-lg-6 col-md-6 col-sm-6 col-xs-12">
        {% if app.request.attributes.get('_route') == 'dashboard_collection_add' or app.request.attributes.get('_route') == 'dashboard_collection_edit' %}
            {% form_theme form 'admin/bootstrap_3_layout.html.twig' %}
            {% include 'embed/form/collection-form.html.twig' %}
            {{ tinymce_init() }}
        {% endif %}
        {% if app.request.attributes.get('_route') == 'dashboard_collection' %}
            {% if liste|length > 0 %}
            <ul class="list-group">
                {% for item in liste %}
                <li class="list-group-item">
                    {{item.title}}
                    <a class="action" href="{{path('dashboard_collection_edit', {id: item.id})}}">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    <a class="action" href="{{path('dashboard_illustration_delete', {id: item.id})}}">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </li>
                {% endfor %}
            </ul>
            {% endif %}
        {% endif %}
    </div>
</div>

{% endblock %}


