<div class="container">

    <h1 id="logo"><a href="http://themes.fastwp.net/cc/" style="background-image: url(http://themes.fastwp.net/cc/wp-content/uploads/2016/07/bg-logo@2x.png);"></a></h1>

    {% for item in posts %}
        {#<div class="item col-lg-6 blog">#}
            {#<div class="content-wrapper">#}
                {#<figure class="images">#}
                    {#{% if item.files|length > 0 and item.files|length < 2 %}#}
                        {#{% for image in item.files %}#}
                            {#{% set path = '/upload/media/' ~image.name %}#}
                            {#<img src="{{ path | imagine_filter('item_detail') }}" alt="{{ item.title }}">#}
                        {#{% endfor %}#}
                    {#{% endif %}#}
                    {#<div class="overlay-image visible">#}
                        {#<div class="info-wrapper">#}
                                {#<div class="info">#}
                                    {#<p>HI, I'M JAMES. I LOVE TO TRAVEL AND SHARE MY ADVENTURES.</p>#}
                                    {#<header><h2>The Blog</h2></header>#}
                                {#</div>#}
                        {#</div>#}
                    {#</div>#}
                {#</figure>#}
            {#</div>#}
        {#</div>#}
    <div class="item col-lg-3 default">
        <div class="content-wrapper">
            <a href="{{ path('post_detail', {category: item.category.name|seo, year:'2016', month:'09', day: '29', title: item.title|seo }) }}" title="">
                <figure class="images">
                    {% if item.files|length > 0 and item.files|length < 2 %}
                        {% for image in item.files %}
                            {% set path = '/upload/media/' ~image.name %}
                            <img src="{{ path | imagine_filter('item_detail') }}" alt="{{ item.title }}">
                        {% endfor %}
                    {% endif %}
                </figure>
            </a>
            <div class="info-wrapper">
                <p class="small categories">
                    {% if item.category is not null %}
                        <a href="" rel="category tag">{{ item.category.name }}</a>
                    {% else %}
                        <a href="" rel="category tag">Non class&eacute;</a>
                    {% endif %}
                </p>
                <a href="{{ path('post_detail', {category: item.category.name|seo, year:'2016', month:'09', day: '29', title: item.title|seo }) }}" title="">
                    <h4 class="header">{{ item.title }}</h4>
                </a>
                <div class="datas">
                    <i class="fa fa-calendar" aria-hidden="true"></i>{{ item.modification|localizeddate('medium', 'none') }}
                    {% if item.view is not null %}<i class="fa fa-eye" aria-hidden="true"></i>{{ item.view }}{% endif %}
                </div>


            </div>
        </div></div>
    {% endfor %}

    <style type="text/css">
        .item {
            height:385px;
            overflow: hidden;
            text-align:center;
            float:left;
            margin:15px 0 15px 0;
            
        }
        .item .content-wrapper {
            position: relative;
            height: calc(100%);
            width: calc(100%);
            overflow: hidden;
        }
        .item .content-wrapper a {
            color:#454545;
            text-transform:uppercase;
        }
        .item.default .content-wrapper {
            
        }
        .item.default .content-wrapper figure {
            height:180px;
            overflow:hidden;
        }
        .item.default .content-wrapper .info-wrapper {
            position: absolute;
            left: 0;
            bottom: 0;
            background: #fff;
            height: auto;
            min-height: 55%;
            width: 100%;
            padding: 12%;
        }
        .item.default .content-wrapper .info-wrapper .fa {
            font-size:14px;
        }
        .item.default .content-wrapper .info-wrapper .fa::after {
            content:'';
            display:block;
            float:right;
            width:15px;
        }
        .item.default .content-wrapper .info-wrapper .datas {
            border-top: 1px solid rgba(0,0,0,0.065);
            width: 100%;
            display: block;
            margin: 15px 0 0px;
            position: absolute;
            padding: 12px 12% 0px;
            bottom: 12%;
            left: 0;
        }
        .item.default .content-wrapper .info-wrapper .categories a {
            padding:2px 0 2px 0;
            border-bottom:1px solid #454545;
            display:inline-block;

        }
        .item figure img {
            height: auto;
            width: 100%;
        }

        .overlay-image {
            width: 100%;
            height: 385px;
            background: rgba(46,46,46,0.8);
            position: absolute;
            top: 0;
            left: 0;
            -webkit-transition: background 0.2s ease 0s; transition: background 0.2s ease 0s; z-index:19; display:block;
            color:white;
        }

        .overlay-image .info-wrapper .info p {
            font-size: 10px !important;

            font-weight: 400;
            color: white;
            letter-spacing: 2px;
            padding-left: 2px;
        }

        .overlay-image .info-wrapper {
            text-transform: uppercase;
            font-family: 'Oswald';
            height: 100%;
            width: 100%;
            padding:12%;
            display: table;

            margin: 0px auto;
            position: relative;

            z-index: 11;
        }

        .overlay-image .info-wrapper .info {
            display: table-cell;
            vertical-align: middle;
            padding: 0;
        }

        .overlay-image .info-wrapper .info header {
            margin-top: -2px !important;
        }

        .overlay-image .info-wrapper .info header h2 {
            margin: 0;
        }

        h2 {
            font-size: 44px;
            font-weight: 400;
            line-height: 1.2;
            letter-spacing: -2px;
        }

        h4 {
            font-size: 20px;
            font-weight: 400;
            line-height: 27px;
        }

    </style>




</div>
