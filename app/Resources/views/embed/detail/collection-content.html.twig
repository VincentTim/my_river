<article class="collection">
    {{ post.description|raw }}
    {% if post.posts|length > 0  %}
        {% for content in post.posts %}
            {% if content.files|length > 0 %}
                {% for image in content.files %}
                    {% set path = '/upload/media/' ~image.name %}
                    <a href="{{ path | imagine_filter('item_detail') }}" rel="{{ post.title|seo }}" class="fancybox col-xs-12 col-sm-12 col-md-3 col-lg-3" title="{{ image.legend }}">
                        <img src="{{ path | imagine_filter('item_view') }}">
                    </a>

                {% endfor %}
            {% endif %}
        {% endfor %}

    {% endif %}

</article>