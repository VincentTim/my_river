<section class="col-lg-9 detail">
    <header>
        <span class="category"></span>
        <h1>{{ post.title }}</h1>
        <span class="published">{{ post.modification|localizeddate('long', 'none') }}</span>
    </header>
    <article>
        {% if post.files|length > 0 and post.files|length < 2 %}
            {% for image in post.files %}
                {% set path = '/upload/media/' ~image.name %}
                <img src="{{ path | imagine_filter('item_detail') }}">
            {% endfor %}
        {% endif %}
        {{ post.description|raw }}
    </article>
    {% if post.tags|length > 0 %}
        <ul id="tags-wrapper">
            {% for tag in post.tags %}
                <li>{{ tag.name }}</li>
            {% endfor %}
        </ul>
    {% endif %}
</section>
