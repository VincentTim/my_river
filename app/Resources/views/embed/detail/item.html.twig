<section class="col-lg-9 col-md-9 col-sm-9 col-xs-12 detail">
    <header>
        {% if post.category.id is defined %}
            <span class="category">{{ post.category.name }}</span>
        {% endif %}
        <h1>{{ post.title }}</h1>
        <span class="published">
            {{ post.modification|localizeddate('long', 'none') }}
            {% if post.places is defined and post.places is not empty %}
             - {{ post.place.site }}, {{ post.place.country }}
            {% endif %}
        </span>
    </header>
    {% if post.category.id is defined and (post.category.id == '1' or post.category.id == '2') %}
        {% include ':embed/detail:post-content.html.twig' with { post:post } %}
    {% endif %}
    {% if post.category.id is not defined %}
        {% include ':embed/detail:collection-content.html.twig' with { post:post } %}
    {% endif %}
</section>
{% include ':embed/detail:aside.html.twig' with { tags:tags, random:random, cats: cats} %}
<div class="social-bar">
    <ul>
        <li>
            <a class="social-link">
                <i class="fa  fa-facebook" aria-hidden="true"></i>
            </a>
        </li>
        <li>
            <a class="social-link">
                <i class="fa  fa-instagram" aria-hidden="true"></i>
            </a>
        </li>
        <li>
            <a class="social-link">
                <i class="fa  fa-twitter" aria-hidden="true"></i>
            </a>
        </li>
        <li>
            <a class="social-link">
                <i class="fa  fa-pinterest" aria-hidden="true"></i>
            </a>
        </li>
    </ul>
</div>
