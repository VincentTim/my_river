            {% include 'embed/header.html.twig' %}

            <div class="container">
                {% block body %}{% endblock %}
            </div>
            {% block javascripts %}{% endblock %}
        </div>
        <footer></footer>
        {#<canvas id="myChart" width="400" height="200"></canvas>#}

    </body>
